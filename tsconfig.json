{
  "compilerOptions": {
    "types": [
      "node"
    ],
    "target": "ES2020", // Suitable for Node.js
    "module": "ESNext", // For ESM support
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}